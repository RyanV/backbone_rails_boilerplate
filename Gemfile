source 'https://rubygems.org'
ruby '2.0.0'

gem 'bootstrap-sass'
gem 'jbuilder', '~> 1.2' # Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'rails', '4.0.0'
gem 'pg'
gem 'sass-rails', '~> 4.0.0'
gem 'thin'
gem 'uglifier', '>= 1.3.0'

gem 'rails_12factor', group: :production

gem 'handlebars_assets', '~> 0.14.x' # (https://github.com/leshill/handlebars_assets) Use handlebars.js templates with the Rails asset pipeline.

group :development, :test do
  gem 'capybara-webkit'
  gem 'jasmine'
  gem 'poltergeist'
  gem 'rspec-rails'
end

group :doc do
  gem 'sdoc', require: false  # bundle exec rake doc:rails generates the API under doc/api.
end
